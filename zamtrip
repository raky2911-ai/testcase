    <script>
        // Premium Modal Functions
        function showBookingModal() {
            const modal = document.getElementById('bookingModal');
            modal.style.display = 'flex';
            setTimeout(() => modal.classList.add('show'), 10);
        }

        function showConsultationModal() {
            const modal = document.getElementById('consultationModal');
            modal.style.display = 'flex';
            setTimeout(() => modal.classList.add('show'), 10);
        }

        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.classList.remove('show');
            setTimeout(() => modal.style.display = 'none', 300);
        }

        function contactWhatsAppPremium() {
            alert('🌟 ZAMTRIP PREMIUM SERVICE 🌟\n\nMenghubungkan ke WhatsApp Premium: +62 812-ZAMTRIP\n\n✨ Pesan Otomatis:\n"Assalamualaikum, saya tertarik dengan layanan premium Zamtrip untuk paket umroh dan wisata halal eksklusif. Mohon informasi detail dan konsultasi dengan travel consultant premium Anda."\n\n🎯 Response time: < 5 menit\n💎 Dedicated premium consultant\n🏆 Layanan VIP 24/7');
            closeModal('bookingModal');
        }

