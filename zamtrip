            closeModal('consultationModal');
        }

        function requestCustomPackage() {
            alert('✨ CUSTOM PREMIUM PACKAGE ✨\n\nLayanan custom package eksklusif untuk:\n\n🎯 PERSONAL PREFERENCES:\n• Durasi perjalanan sesuai keinginan\n• Destinasi pilihan Anda\n• Tingkat kemewahan fasilitas\n• Aktivitas spiritual & wisata\n\n👥 GROUP CUSTOMIZATION:\n• Family package (3-15 pax)\n• Corporate spiritual retreat\n• Wedding anniversary umroh\n• Multi-generational journey\n\n💎 PREMIUM FEATURES:\n• Dedicated travel designer\n• Personal concierge service\n• Flexible payment terms\n• 24/7 premium support\n\n📞 Tim designer kami akan menghubungi untuk konsultasi mendalam');
            closeModal('consultationModal');
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modals = document.querySelectorAll('.modal-premium');
            modals.forEach(modal => {
                if (event.target === modal) {
                    closeModal(modal.id);
                }
            });
        }

        // Premium Scroll Animations
        function observeElements() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry, index) => {
                    if (entry.isIntersecting) {
                        setTimeout(() => {
                            entry.target.classList.add('visible');
                        }, index * 150);
                    }
                });
            }, {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            });

            document.querySelectorAll('.fade-in').forEach(el => {
                observer.observe(el);
            });
        }

        // Premium Page Load Effects
        document.addEventListener('DOMContentLoaded', function() {
            observeElements();
            
            // Add premium loading effect
            document.body.style.opacity = '0';
            setTimeout(() => {
                document.body.style.transition = 'opacity 0.8s ease';
                document.body.style.opacity = '1';
            }, 100);

            // Premium hover effects for cards
            const cards = document.querySelectorAll('.feature-card-premium, .stat-item, .contact-card-premium');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-12px) scale(1.02)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });
        });

        // Premium smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
